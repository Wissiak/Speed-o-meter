<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_settings_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.speedOMeter.speedOMeter.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_inset"
        android:layout_marginLeft="@dimen/layout_inset"
        android:layout_marginRight="@dimen/layout_inset"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:text="@string/set_language" />

        <Spinner
            android:id="@+id/languages_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/languages_array"
            android:background="@android:drawable/btn_dropdown"
            android:prompt="@string/set_language"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:text="@string/set_measurement" />

        <Spinner
            android:id="@+id/measurements_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <include layout="@layout/drawer_layout" />

</android.support.design.widget.CoordinatorLayout>